<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.CadastroPessoaActivity"
    android:background="@drawable/shape_degrade">

    <ImageView
        android:id="@+id/imageViewCadastro"
        style="@style/img_estilo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_adopet" />

    <View
        android:id="@+id/viewCadastro"
        style="@style/view_cadastro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCadastro"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewCadastro"
        style="@style/legenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro Usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCadastro" />

    <EditText
        android:id="@+id/usuario_cadastro"
        style="@style/edit_text_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/baseline_account_circle_24"
        android:hint="UsuÃ¡rio"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/viewCadastro"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/viewCadastro"
        app:layout_constraintTop_toTopOf="@+id/viewCadastro" />


    <EditText
        android:id="@+id/senha_cadastro"
        style="@style/edit_text_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/baseline_password_24"
        android:hint="Senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/viewCadastro"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/viewCadastro"
        app:layout_constraintTop_toBottomOf="@+id/usuario_cadastro" />

    <EditText
        android:id="@+id/nome_cadastro"
        style="@style/edit_text_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:drawableRight="@drawable/baseline_type_specimen_24"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/viewCadastro"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/viewCadastro"
        app:layout_constraintTop_toBottomOf="@+id/senha_cadastro" />

    <EditText
        android:id="@+id/cpf_cadastro"
        style="@style/edit_text_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="CPF"
        android:inputType="text"
        android:drawableRight="@drawable/baseline_format_list_numbered_24"
        app:layout_constraintEnd_toEndOf="@+id/viewCadastro"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/viewCadastro"
        app:layout_constraintTop_toBottomOf="@+id/nome_cadastro" />

    <EditText
        android:id="@+id/telefoneCadastroPessoa"
        style="@style/edit_text_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Telefone"
        android:drawableRight="@drawable/baseline_contact_phone_24"
        app:layout_constraintEnd_toEndOf="@+id/viewCadastro"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/viewCadastro"
        app:layout_constraintTop_toBottomOf="@+id/cpf_cadastro" />

    <LinearLayout
        android:id="@+id/layout_botao_cadastro"
        style="@style/layout"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/viewCadastro"
        app:layout_constraintEnd_toEndOf="@+id/viewCadastro"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintStart_toStartOf="@+id/viewCadastro">

        <Button
            style="@style/botao"
            android:id="@+id/button_cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cadastrar" />

        <Button
            style="@style/botao"
            android:id="@+id/button_limpar_cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Limpar" />

    </LinearLayout>

    <TextView
        android:id="@+id/listar_animais"
        style="@style/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_home_24"
        android:text="Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_botao_cadastro"
        app:layout_constraintVertical_bias="1.0"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/loginText"
        style="@style/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/baseline_login_24"
        android:text="ENTRAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


